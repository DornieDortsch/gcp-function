{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "GcpFunction",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "prefix": {
      "description": "Cloud Function trigger",
      "default": "joelcode",
      "type": "string",
      "minLength": 1,
      "x-prompt": "What trigger would you like to use?"
    },
    "trigger": {
      "description": "Cloud Function trigger",
      "enum": ["--trigger-http", "--trigger-topic"],
      "default": "--trigger-topic",
      "type": "string",
      "minLength": 1,
      "x-prompt": "What trigger would you like to use?"
    },
    "triggerTopic": {
      "description": "Cloud Function trigger",
      "default": "",
      "type": "string",
      "minLength": 1,
      "x-prompt": "What pubsup topic would you like to use? (only for trigger --trigger-topic)"
    },
    "runtime": {
      "description": "Cloud Function runtime",
      "default": "nodejs10",
      "type": "string",
      "minLength": 1,
      "x-prompt": "What runtime would you like to use?"
    },
    "maxInstances": {
      "description": "Maximum instance of cloud functions",
      "default": 10,
      "type": "number",
      "minLength": 1,
      "x-prompt": "What is the maximum number of instance?"
    },
    "region": {
      "description": "Cloud Function region",
      "default": "us-central1",
      "type": "string",
      "minLength": 1,
      "x-prompt": "What region would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    },
    "skipPackageJson": {
      "type": "boolean",
      "default": false,
      "description": "Do not add dependencies to package.json."
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "default": "eslint"
    },
    "unitTestRunner": {
      "type": "string",
      "enum": ["jest", "none"],
      "description": "Test runner to use for unit tests",
      "default": "jest"
    },
    "nxVersion": {
      "type": "string",
      "description": "*"
    }
  },
  "required": ["name"]
}
